{% extends ":admin:base.html.twig" %}


{% block pageHeader %}Admin > Annonces{% endblock %}

{%  block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-close">
                    </div>
                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Annonces</h3>
                        <a href="{{ url('admin_annonce_new') }}" class="btn btn-primary m-l-25">Nouveau</a>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Titre</th>
                                <th>Description</th>
                                <th>Lien</th>
                                <td>Actions disponibles</td>
                            </tr>
                            </thead>
                            <tbody>
                            {% for annonce in annonces %}
                                <tr>
                                    <td>{{ annonce.id }}</td>
                                    <td>{{ annonce.title }}</td>
                                    <td>{{ annonce.description }}</td>
                                    <td>{{ annonce.link }}</td>
                                    <td><a href="{{ url('admin_annonce_edit', {'id': annonce.id}) }}"class="btn btn-info m-l-25">Modifier</a><a href="{{ url('admin_annonce_remove', {'id': annonce.id}) }}" class="btn btn-danger m-l-25">Supprimer</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}